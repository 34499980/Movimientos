<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrarse" >


    <TextView
        android:id="@+id/txtTitulos"
        android:layout_width="295dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editNombre"
        android:layout_marginTop="90dp"
        android:text="@string/nuevo_usuario"
        android:textSize="24sp"
        tools:textColor="@android:color/background_dark" />


    <EditText
        android:id="@+id/editNombre"
        android:layout_width="181dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="202dp"
        android:ems="10"
        android:hint="Nombre Usuario"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="79dp" />

    <Button
        android:id="@+id/btnCrear"
        android:layout_width="91dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="121dp"
        android:layout_marginStart="34dp"
        android:text="Crear"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="137dp" />

    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        android:text="Siguiente" />

    <EditText
        android:id="@+id/edtContrase単a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtTitulos"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Contrase単a"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/edtContrase単a2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtTitulos"
        android:layout_marginBottom="200dp"
        android:ems="10"
        android:hint="Repetir contrase単a"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnFinalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnCrear"
        android:layout_alignTop="@+id/btnSiguiente"
        android:text="Finalizar" />

</RelativeLayout>